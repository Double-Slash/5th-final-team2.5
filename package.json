{
  "name": "root",
  "private": true,
  "devDependencies": {
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.2.0",
    "husky": "^4.3.4",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --allow-empty"
    }
  },
  "lint-staged": {
    "packages/**/*.{js, jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "bootstrap": "yarn install; lerna bootstrap",
    "package:front": "lerna run dev --scope=dodam --stream",
    "package:server": "lerna run dev --scope=dodam-server",
    "dev": "lerna run dev --parallel"
  }
}
