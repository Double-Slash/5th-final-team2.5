{
  "name": "root",
  "private": true,
  "devDependencies": {
    "eslint": "^7.15.0",
    "husky": "^4.3.4",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1"
  },
  "workspaces": [
    "apps/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --allow-empty"
    }
  },
  "lint-staged": {
    "/**/*.{js, jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "front": "lerna run dev --scope=front --parallel",
    "dev": "lerna run dev --parallel"
  }
}
